{
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the app",
      "type": "string"
    },
    "tweaks": {
      "type": "object",
      "properties": {
        "tricks": {
          "type": "array",
          "description": "The dlls to install",
          "items": {
            "type": "string",
            "enum": [""]
          },
          "uniqueItems": true
        },
        "env": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "settings": {
          "type": "object",
          "properties": {
            "esync": {
              "type": "boolean"
            },
            "fsync": {
              "type": "boolean"
            }
          }
        }
      },
      "required": ["tricks", "env", "settings"]
    },
    "issues": {
      "type": "array",
      "description": "The issues the game has and whether there is a solution",
      "items": {
        "type": "object",
        "properties": {
          "solution": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["description"]
      },
      "uniqueItems": true
    }
  },
  "required": ["name", "tweaks", "issues"]
}
